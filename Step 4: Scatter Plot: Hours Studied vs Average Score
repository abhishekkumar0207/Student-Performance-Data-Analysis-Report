# Create average score column
df["Average_Score"] = df[["Math_Score", "English_Score", "Science_Score"]].mean(axis=1)

# Scatter plot
plt.figure(figsize=(8,5))
sns.scatterplot(data=df, x="Hours_Studied", y="Average_Score", hue="Attendance", palette="viridis", s=100)
plt.title("Hours Studied vs Average Score")
plt.xlabel("Hours Studied per Week")
plt.ylabel("Average Score")
plt.show()
